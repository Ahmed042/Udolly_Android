<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity">
<LinearLayout
    android:id="@+id/linear_above"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/black"
        android:text="LOG IN"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/applogo"
            android:layout_alignTop="@+id/textView2"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:fontFamily="@font/montserrat"
            android:inputType="textEmailAddress"
            android:textColorHighlight="#fd426f"
            android:hint="Enter Email"/>

        <EditText
            android:id="@+id/txt_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:inputType="textPassword"
            android:textColorHighlight="#fd426f"
            android:hint="Enter Password"/>
        <TextView
            android:id="@+id/forgettxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Forget Passwod"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
        <Button
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/roundbutton2"
            android:text="Log In"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linear_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_dnt_have"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"
            android:text="Don't have an account?" />
        <TextView
            android:id="@+id/btn_signUp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/AppColor"
            android:text="Sign Up" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progressTint="@color/black"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />
